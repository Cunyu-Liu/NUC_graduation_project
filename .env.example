# 数据库配置（必需）
DATABASE_URL=postgresql://username:password@localhost:5432/literature_analysis

# GLM-4 API配置（必需）
GLM_API_KEY=your_glm_api_key_here
GLM_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# LLM模型配置
DEFAULT_MODEL=glm-4-flash
DEFAULT_TEMPERATURE=0.3
MAX_TOKENS=4000

# Flask配置
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=True

# 输出目录配置
OUTPUT_DIR=./output
SUMMARY_OUTPUT_DIR=./output/summaries
KEYPOINTS_OUTPUT_DIR=./output/keypoints
CLUSTER_OUTPUT_DIR=./output/clusters

# 并发控制
MAX_CONCURRENT=5

# Redis缓存配置（可选）
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# ============================================================================
# v4.2 新增配置 - Milvus 向量数据库
# ============================================================================

# Milvus 向量数据库配置（Docker 部署）
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Embedding 模型配置
# 支持本地模型或 API 生成
# 本地模型会自动下载到本地缓存
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5

# 如果使用 API 生成 embedding，配置以下项（可选）
# EMBEDDING_API_KEY=your_embedding_api_key
# EMBEDDING_BASE_URL=https://api.example.com

# 向量维度（根据模型自动设置，一般不需要手动修改）
# EMBEDDING_DIM=1024
